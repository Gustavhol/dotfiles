[module/uptime]
type = custom/script
exec = ~/.config/polybar/uptime.sh
format-underline = ${colors.background}
click-left = ~/.config/polybar/dunst_cpu.sh
click-right = ~/.config/polybar/dunst_memory.sh

[module/updates-pacman-aurhelper]
type = custom/script
exec = ~/.config/polybar/updates-pacman-aurhelper.sh
interval = 600

[module/previous]
type = custom/ipc
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo "ï¦­"
click-left = "spotifyctl -q previous"


[module/next]
type = custom/ipc
; Default
hook-0 = echo ""
; When spotify active
hook-1 = echo "ï¦¬"
click-left = "spotifyctl -q next"


[module/playpause]
type = custom/ipc
; Default
hook-0 = echo ""
; Playing
hook-1 = echo "ïŒ"
; Paused
hook-2 = echo "ï‹"
